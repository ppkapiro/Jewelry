{
  // ══════════════════════════════════════════════════════════════
  // CONFIGURACIÓN DE VS CODE PARA MÚLTIPLES IAs
  // Proyecto: Jewelry - Remedio Joyería Miami
  // ══════════════════════════════════════════════════════════════

  // ────────────────────────────────────────────────────────────
  // EDITOR GENERAL
  // ────────────────────────────────────────────────────────────
  "editor.fontSize": 14,
  "editor.fontFamily": "'Fira Code', 'Cascadia Code', Consolas, monospace",
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.6,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },

  // ────────────────────────────────────────────────────────────
  // GITHUB COPILOT (Principal)
  // ────────────────────────────────────────────────────────────
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true,
    "php": true,
    "javascript": true,
    "typescript": true,
    "css": true,
    "scss": true,
    "json": true,
    "shellscript": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.editor.enableCodeActions": true,

  // Agentes personalizados habilitados
  "github.copilot.chat.agents.enabled": true,
  "github.copilot.chat.useProjectTemplates": true,

  // Configuración de inline suggestions
  "editor.inlineSuggest.enabled": true,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "on",
    "strings": "on"
  },

  // ────────────────────────────────────────────────────────────
  // CODEIUM (Complementario - Gratuito)
  // ────────────────────────────────────────────────────────────
  "codeium.enableCodeLens": true,
  "codeium.enableSearch": true,
  "codeium.enableConfig": {
    "*": true
  },

  // Paths del workspace
  "codeium.workspaceRootPaths": ["/srv/stacks/jewelry"],

  // Ignorar archivos innecesarios
  "codeium.ignorePaths": [
    "**/node_modules/**",
    "**/vendor/**",
    "**/data/mysql/**",
    "**/data/wordpress/wp-admin/**",
    "**/data/wordpress/wp-includes/**",
    "**/.git/**",
    "**/data/wordpress/wp-content/uploads/**"
  ],

  // Lenguajes soportados
  "codeium.languages": {
    "php": true,
    "javascript": true,
    "typescript": true,
    "css": true,
    "scss": true,
    "sql": true,
    "markdown": true,
    "shellscript": true,
    "json": true,
    "yaml": true
  },

  // ────────────────────────────────────────────────────────────
  // CONTINUE.DEV (Para Claude API - Opcional)
  // ────────────────────────────────────────────────────────────
  // Descomentar si instalas Continue.dev con Claude API
  /*
  "continue.telemetryEnabled": false,
  "continue.enableTabAutocomplete": false, // Dejar a Copilot/Codeium
  "continue.models": [
    {
      "title": "Claude 3.5 Sonnet",
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20241022",
      "apiKey": "${ANTHROPIC_API_KEY}",
      "contextLength": 200000
    }
  ],
  */

  // ────────────────────────────────────────────────────────────
  // PHP (WordPress)
  // ────────────────────────────────────────────────────────────
  "php.suggest.basic": true,
  "php.validate.enable": true,
  "php.validate.run": "onType",

  // Intelephense (recomendado para PHP)
  "intelephense.environment.phpVersion": "8.1.0",
  "intelephense.files.maxSize": 5000000,
  "intelephense.files.associations": ["*.php", "*.phtml"],
  "intelephense.files.exclude": [
    "**/.git/**",
    "**/.svn/**",
    "**/.hg/**",
    "**/CVS/**",
    "**/.DS_Store/**",
    "**/node_modules/**",
    "**/vendor/**",
    "**/data/mysql/**",
    "**/data/wordpress/wp-admin/**",
    "**/data/wordpress/wp-includes/**"
  ],

  // WordPress hints
  "intelephense.stubs": [
    "wordpress",
    "woocommerce",
    "apache",
    "bcmath",
    "Core",
    "curl",
    "date",
    "dom",
    "fileinfo",
    "filter",
    "gd",
    "hash",
    "iconv",
    "imagick",
    "json",
    "libxml",
    "mbstring",
    "mysqli",
    "mysqlnd",
    "openssl",
    "pcre",
    "PDO",
    "session",
    "SimpleXML",
    "soap",
    "sockets",
    "sodium",
    "SPL",
    "standard",
    "tokenizer",
    "xml",
    "xmlreader",
    "xmlwriter",
    "zip",
    "zlib"
  ],

  // ────────────────────────────────────────────────────────────
  // FORMATTERS
  // ────────────────────────────────────────────────────────────
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on"
  },

  // ────────────────────────────────────────────────────────────
  // FILES & SEARCH
  // ────────────────────────────────────────────────────────────
  "files.associations": {
    "*.php": "php",
    "*.module": "php",
    "*.inc": "php",
    "*.install": "php",
    "*.theme": "php",
    "*.profile": "php",
    "*.tpl.php": "php",
    "*.test": "php",
    "*.phtml": "php"
  },

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/vendor": true,
    "data/mysql": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/vendor": true,
    "**/data/mysql": true,
    "**/data/wordpress/wp-admin": true,
    "**/data/wordpress/wp-includes": true,
    "**/.git": true,
    "**/data/wordpress/wp-content/uploads": true
  },

  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/vendor/**": true,
    "data/mysql/**": true
  },

  // ────────────────────────────────────────────────────────────
  // GIT
  // ────────────────────────────────────────────────────────────
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.enableStatusBarSync": true,

  // ────────────────────────────────────────────────────────────
  // TERMINAL
  // ────────────────────────────────────────────────────────────
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'Fira Code', 'Cascadia Code', monospace",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash",
      "icon": "terminal-bash"
    },
    "docker": {
      "path": "/bin/bash",
      "args": ["-c", "docker exec -it jewelry_wordpress bash"],
      "icon": "vm"
    }
  },

  // ────────────────────────────────────────────────────────────
  // DOCKER
  // ────────────────────────────────────────────────────────────
  "docker.showStartPage": false,
  "docker.commands.build": "docker compose build",
  "docker.commands.up": "docker compose up -d",
  "docker.commands.down": "docker compose down",

  // ────────────────────────────────────────────────────────────
  // WORKSPACE ESPECÍFICO
  // ────────────────────────────────────────────────────────────
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "vs-seti",
  "workbench.startupEditor": "none",

  // Status bar customization
  "workbench.statusBar.visible": true,

  // Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",

  // ────────────────────────────────────────────────────────────
  // PRIORIDAD DE AUTOCOMPLETADO
  // ────────────────────────────────────────────────────────────
  // Orden de prioridad para suggestions:
  // 1. GitHub Copilot (contexto del proyecto + custom agents)
  // 2. Codeium (autocompletado general)
  // 3. IntelliSense nativo (PHP, JS)

  "editor.suggest.preview": true,
  "editor.suggest.showMethods": true,
  "editor.suggest.showFunctions": true,
  "editor.suggest.showConstructors": true,
  "editor.suggest.showFields": true,
  "editor.suggest.showVariables": true,
  "editor.suggest.showClasses": true,
  "editor.suggest.showStructs": true,
  "editor.suggest.showInterfaces": true,
  "editor.suggest.showModules": true,
  "editor.suggest.showProperties": true,
  "editor.suggest.localityBonus": true,

  // ────────────────────────────────────────────────────────────
  // SNIPPETS PERSONALIZADOS
  // ────────────────────────────────────────────────────────────
  "editor.snippetSuggestions": "top"

  // ────────────────────────────────────────────────────────────
  // EXTENSIONES RECOMENDADAS
  // ────────────────────────────────────────────────────────────
  // Estas extensiones optimizan el desarrollo con múltiples IAs:
  // - GitHub Copilot (github.copilot)
  // - Codeium (codeium.codeium)
  // - Continue.dev (continue.continue) [Opcional para Claude API]
  // - PHP Intelephense (bmewburn.vscode-intelephense-client)
  // - WordPress Snippets (wordpresstoolbox.wordpress-toolbox)
  // - Docker (ms-azuretools.vscode-docker)
  // - GitLens (eamodio.gitlens)
  // - Prettier (esbenp.prettier-vscode)
  // - ESLint (dbaeumer.vscode-eslint)

  // ────────────────────────────────────────────────────────────
  // NOTAS
  // ────────────────────────────────────────────────────────────
  // 1. Copilot tiene prioridad por custom agents del proyecto
  // 2. Codeium complementa con búsqueda semántica y chat
  // 3. Continue.dev es opcional solo si quieres Claude API en editor
  // 4. Claude Desktop App es recomendado para contenido largo
  // 5. ChatGPT se usa en navegador para marketing/copy

  // ────────────────────────────────────────────────────────────
  // TROUBLESHOOTING
  // ────────────────────────────────────────────────────────────
  // Si hay conflictos entre IAs:
  // - Deshabilitar autocompletado de una: "continue.enableTabAutocomplete": false
  // - Ajustar prioridad: cambiar orden en "editor.suggest"
  // - Verificar logs: View > Output > seleccionar extensión
}
