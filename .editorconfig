# EditorConfig for Jewelry WordPress Project
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# PHP files
[*.php]
indent_size = 4
max_line_length = 100

# JavaScript files
[*.js]
indent_size = 2
max_line_length = 100

# TypeScript files
[*.ts]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# CSS and SCSS files
[*.{css,scss,sass}]
indent_size = 2
max_line_length = 100

# HTML files
[*.html]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

[docker-compose.yml]
indent_size = 2

# Environment files
[.env*]
indent_size = 2

# Git files
[.gitignore]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# XML files
[*.xml]
indent_size = 2
